@using Affidavit.Utils

@{
    ViewBag.Title = @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Title");
    var SAM360Provider = new SAM360Provider();
};

@section Scripts{
    <script>
        var IsSAM360On = '@ViewBag.IsSAM360Mode';
    </script>
    <script src="@Url.Content("~/Scripts/Custom/MyPlatform/MyPlatformScript.js")"></script>
}

<div class="titulo rojo">
    <div class="centro">
        <h1>@TranslatorHelper.TranslateTextByIdentifier("My_Platform_Title")</h1>
    </div>
</div>

<div id="aviso">
    <div class="centro">

        @if (!ViewBag.IsSAM360Mode)
        {
            <p class="derecho">
                @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Download")
