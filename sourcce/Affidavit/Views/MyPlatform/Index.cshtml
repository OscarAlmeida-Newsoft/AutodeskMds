                    @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Agent")
                </a>
                <a onclick="gAnalytics.throwRedirectEvent('Click Download Agent Manual','SAM Live','@Url.Action("DownloadAgent","ChooseAnAction")')" href="#" target="_self" class="btn cloud">
                    @TranslatorHelper.TranslateTextByIdentifier("My_Platform_SetupFile")
                </a>
            </p>
        }
        else
        {
            <p class="derecho">
                @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Download")
                @*<a onclick="gAnalytics.throwRedirectEvent('Click Download Set Up File','SAM360','@Url.Action("DownloadAgent","ChooseAnAction")')" href="#" target="_self" class="btn cloud">
                    @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Agent")
