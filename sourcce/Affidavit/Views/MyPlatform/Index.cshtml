                <a onclick="gAnalytics.throwRedirectEvent('Click Download Agent Manual','SAM Live','@Url.Action("DownloadManual","ChooseAnAction")')" href="#" target="_self" class="btn cloud">
                    @TranslatorHelper.TranslateTextByIdentifier("My_Platform_Agent")
                </a>
                <a onclick="gAnalytics.throwRedirectEvent('Click Download Set Up File','SAM Live','@Url.Action("DownloadAgent","ChooseAnAction")')" href="#" target="_self" class="btn cloud">
                    @TranslatorHelper.TranslateTextByIdentifier("My_Platform_SetupFile")
                </a>
            </p>
        }

    </div>
</div>

<div id="pagina" class="embed_iframe">


    <iframe src="@ViewBag.MeasureMyPlatformUrl" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

</div>

