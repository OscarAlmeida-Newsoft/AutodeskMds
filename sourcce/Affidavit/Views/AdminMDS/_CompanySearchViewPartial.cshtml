@using Affidavit.Models.AdminMDS;
@using Affidavit.Utils
@model List<CompanySearchViewModel>

<div class="centro">
    @*<div class="col_der formulario">*@
    <div class="contenido version-content">
        @if (Model.Count() != 0)
        {
            if (Session["postofficebox"].ToString() == "System Administrator" || Session["vTitle"].ToString() == "Operations Leader" || Session["vTitle"].ToString() == "SAM Consultant")
            {
                <table border="0" cellspacing="0" cellpadding="0" class="especial_03">
                    <tr class="cabezote">
                        <th class="bg-success thSize" style="width: 38% !important;">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelNombreEmpresa")</th>
                        <th class="bg-success thSize">Campaign</th>
                        <th class="bg-success thSize">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelIndustria")</th>
                        <th class="bg-success thSize">Country</th>
                        <th class="bg-success thSize" style="text-align:center; font-size: 14px; "></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center;">
                            <td style="width: 38% !important">@item.CompanyName</td>
                            <td style="text-align:center;">@item.CampaignName</td>
                            <td style="text-align:center;">@item.Industry</td>
                            <td style="text-align:center;">@item.Country</td>
                            <td style="text-align:center;">
                                <button class="btn btn-sm" id="VerFormularioMDS" style="cursor:pointer;" data-companyid='@item.CompanyID' data-campaign='@item.CampaignID'>
                                    <img src="~/Content/Images/accion_ver.png" />
                                </button>
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <table border="0" cellspacing="0" cellpadding="0" class="especial_03">
                    <tr class="cabezote">
                        <th class="bg-success thSize" style="width: 38% !important;">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelNombreEmpresa")</th>
                        <th class="bg-success thSize">Campaign</th>
                        @*<th class="bg-success thSize">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelIndustria")</th>
                        <th class="bg-success thSize">Country</th>*@
                        <th class="bg-success thSize" style="text-align:center; font-size: 14px; "></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center;">
                            <td style="width: 38% !important">@item.CompanyName</td>
                            <td style="text-align:center;">@item.CampaignName</td>
                            @*<td style="text-align:center;">@item.Industry</td>
                            <td style="text-align:center;">@item.Country</td>*@
                            <td style="text-align:center;">
                                <button class="btn btn-sm" id="VerFormularioMDS" style="cursor:pointer;" data-companyid='@item.CompanyID' data-campaign='@item.CampaignID'>
                                    <img src="~/Content/Images/accion_ver.png" />
                                </button>
                            </td>
                        </tr>
                    }

                </table>
            }

        }
        else
        {
            <label>@TranslatorHelper.TranslateTextByIdentifier("Old_LabelNotCompanyFound")</label>
        }

        <hr />
    </div>
    @*</div>*@
</div>

