@model List<Affidavit.Models.Recommendations.VariableListViewModel>
@using Affidavit.Utils
@{
    ViewBag.Title = "_VariableListPartial";
}
<style>
    tbody label{
        font-weight: normal;
    }
</style>
@if (Model.Count != 0)
{
    <div class="table-scroll-div">
        <div class="set table-responsive" style="width: 100%;">
            <div> &nbsp;</div>
            <table class="table table-hover table-bordered">
                <thead class="thead-default table-header-tittle">
                    <tr>
                        <th class="text-center text-uppercase" style="width: 2% !important;">
                            ID
                        </th>
                        <th class="text-center text-uppercase">
                            Variable Name
                        </th>
                        <th class="text-center text-uppercase" style="width: 5% !important;">
                            Variable Type
                        </th>
                        <th class="text-center text-uppercase">
                            Description
                        </th>
                        <th class="text-center text-uppercase" style="width: 5% !important;">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr style="text-align:center;">
                            <td class="text-center" style="width: 2% !important;">@Html.Label(item.VariableID.ToString())</td>
                            <td class="text-center" style="width: 10% !important;">@Html.Label(item.VariableName)</td>
                            <td class="text-center" style="width: 5% !important;">@Html.Label(item.VariableType)</td>
                            <td class="text-center" style="width: 30% !important;">@Html.Label(item.VariableDescription)</td>
                            <td class="text-center">
                                <button class="btn btn-sm EditVariableButton" data-variableid=@item.VariableID data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="fa fa-edit"></i>
                                </button>
                                <button class="btn btn-sm DeleteVariableButton" data-variableid=@item.VariableID data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="fa fa-remove"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

        <!-- Modals -->
        @using (Html.BeginForm("CreateVariable", "Recommendation", FormMethod.Post))
        {
            <div id="addVariableModal" class="modal fade" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content" style="width: 900px;">
                        <div class="modal-content" style="padding: 20px;">
                            <div class="modal-header">
                                <h3><span id="modalTitle">Create Variable</span></h3>
                            </div>
                            <div class="modal-body">
                                <p id="disagreeReasonErrorServer" class="text-danger hide"></p>
                                <div class="row">
                                    <div class="col-md-12" style="width: 100% !important; height: 50% !important;">

                                        <div id="CreateVariablePartial">

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">

                                <button type="button" class="btn" style="height:inherit !important;" data-dismiss="modal">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelCancel")</button>
                                <button type="submit" class="btn btn-primary" style="height:inherit !important;">@TranslatorHelper.TranslateTextByIdentifier("Old_LabelSave")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

}
else
{
    <div class="mensaje_alerta" style="display:block">
        <p>There are not created variables.</p>
    </div>
}

