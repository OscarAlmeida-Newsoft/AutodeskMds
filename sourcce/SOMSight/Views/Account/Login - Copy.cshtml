@using SOMSight.Models
@model LoginVM
@{
    ViewBag.Title = "Log in";
}

<style>
    .boton {
        background-color: #DF3925 !important;
        border: 0px !important;
        color: #fff;
        font-size: 14px !important;
        text-transform: uppercase;
        cursor: pointer;
        height: 35px !important;
        border-radius: 5px;
        text-align: center;
        -moz-border-radius: 5px;
        margin: 0px 0 10px 0 !important;
        font-family: gotham_medium, Arial, Helvetica, sans-serif;
        padding: 0px 7px 0 7px;
    }
    .boton:hover{
        background-color: #E56222 !important;
    }

    .campo {
        background-color: #fff;
        border: solid 1px #bbb;
        height: 35px;
        font-size: 15px;
        padding: 0 5px;
        margin: 0 0 14px 0;
    }

    .texto {
        font-size: 14px;
    }

    .contenedor {
        width: 100%;
        float: left;
        margin-top: 20px;
        margin-bottom: 30px;
    }
    .contenedor-formulario{
        width: 50%;
        margin-left: 25%;
    }
</style>

<div class="contenedor">
    <h2 class="texto" style="font-weight:bold; margin-bottom:10px;text-align: center;">@ViewBag.Title.</h2>

    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class="contenedor-formulario"}))
        {
            @Html.AntiForgeryToken()
            <h4 class="texto">Use a local account to log in.</h4>
                <hr style="margin-bottom:10px;" />
                @Html.ValidationSummary(true, "", new { })
                <div>
                    @Html.LabelFor(m => m.Email, new { @class = "texto" })
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "campo" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "texto" })
                    </div>
                </div>
                <div>
                    @Html.LabelFor(m => m.Password, new { @class = "texto" })
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "campo" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "texto" })
                    </div>
                </div>
                @*<div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>*@
                <div>
                    <div>
                        <input class="boton" type="submit" value="Log in" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Register as a new user", "Register", null, new { @class = "texto " })
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
        }
    </section>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}